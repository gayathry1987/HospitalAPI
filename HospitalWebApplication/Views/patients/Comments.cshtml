@model IEnumerable<HospitalWebApplication.Models.patientComments>

@{
    ViewData["Title"] = "View";
}

<h1>Show All Comments</h1>
<div>
    <table class="table">
        <thead>
            <tr>
                 <th>
                    @Html.DisplayNameFor(model => model.URN)
                </th>
                 <th>
                    @Html.DisplayNameFor(model => model.PatientName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nurse)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.updatedTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Comments)
                </th>      
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                 <td>
                    @Html.DisplayFor(modelItem => item.URN)
                </td>            
                 <td>
                    @Html.DisplayFor(modelItem => item.PatientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nurse)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.updatedTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comments)
                </td>         
            </tr>
            }
        
        </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>

